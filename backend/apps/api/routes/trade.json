
// Makeing a Trade Request POST api/trade/new

// OR make a counter offer POST /api/trade/<trade id>/counter
{
    "to_user": 12345678, // user id
    "giving": [],
    "receiving": [765, 321], // array of item ids must not be empty
    "my_day_availability": [date, date], // array of date objects ( within a weeks time )
    "my_time_availability": [time, time], // half past the hour ( 9 - 5 )
    "my_location_availibilty": ["Lafrowda"] // array of location names (must be valid )
}

// Getting your trade requests api/trade/requests
[
    {
    "id": 345678987654678, //trade request id
    "to_user": 345678, // user id
    "giving": [123, 456, 789], // item ids, must be array
    "receiving": [765, 321], // either could be empty, but not both
    "their_day_availability": [date, date], // array of date objects
    "their_time_availability": [time, time],
    "their_location_availibilty": ["Lafrowda"], // array of location names
    "status": "SENT" or "AWAITING"
}
]

// Accept a request /api/trade/<trade id>/accept POST
{
    "accepting": true,
    "day": date, // MUST BE IN THEIR DAY AVAILABILITY
    "time": time, // MUST BE IN THEIR TIME AVAILABILITY
    "location": "Lafrowda" // MUST BE IN THEIR LOCATION AVAILABILITY
}

// Rejecting a trade request /api/trade/<trade id>/reject POST
{
    "reject": true,
}